<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="clickHandler"
            type="android.view.View.OnClickListener" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:background="#80EBF5F2"
        tools:context=".StudyActivity">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="10dp"
            android:padding="16dp"
            android:ems="10"
            app:cardCornerRadius="20dp">

            <RelativeLayout
                android:id="@+id/RelativeLayoutSubject"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="36dp">
                <TextView
                    android:id="@+id/tv_subject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="55dp"
                    android:gravity="center"
                    android:lines="1"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textSize="24dp"
                    android:textStyle="bold|italic"
                    android:text="Hii">

                </TextView>

                <ImageView
                    android:id="@+id/iv_sound"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:onClick="@{clickHandler}"
                    android:src="@drawable/ic_sound_disable"
                    android:layout_alignParentRight="true">

                </ImageView>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/relativeLayoutVNWord"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_below="@id/RelativeLayoutSubject"
                android:layout_marginTop="50dp">

                <TextView
                    android:id="@+id/tv_vn_word"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="6dp"
                    android:layout_centerVertical="true"
                    android:ems="10"
                    android:ellipsize="end"
                    android:lineSpacingExtra="6dp"
                    android:lines="3"
                    android:maxLines="3"
                    android:singleLine="false"
                    android:text="vn Text"
                    android:textSize="22dp"
                    android:textStyle="italic" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relativeLayoutVNWord"
                android:layout_marginTop="160dp"
                android:padding="16dp">

                <RelativeLayout
                    android:id="@+id/relativeLayoutEdit"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:id="@+id/tv_type_word"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="6dp"
                        android:hint="a"
                        android:textSize="22dp"
                        android:textStyle="italic" />

                </RelativeLayout>

                <EditText
                    android:id="@+id/edt_enter_word"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="6dp"
                    android:layout_below="@id/relativeLayoutEdit"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:gravity="center"
                    android:lines="1"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:ems="10"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:background="@drawable/rounded_edittext"
                    android:textSize="22dp" />

                <ProgressBar
                    android:id="@+id/progress_times"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/edt_enter_word"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="6dp"
                    android:progress="10"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                </ProgressBar>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/edt_enter_word"
                    android:layout_marginTop="40dp">

                    <Button

                        android:id="@+id/btn_next_word"
                        android:layout_width="200dp"
                        android:layout_height="60dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="7dp"
                        android:layout_marginRight="7dp"
                        android:backgroundTint="@color/button_background_color"
                        android:onClick="@{clickHandler}"
                        android:text="Tiáº¿p"
                        android:textAllCaps="false"
                        android:textSize="24dp"
                        android:textStyle="bold"
                        app:cornerRadius="18dp">

                    </Button>

                </RelativeLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>
</layout>